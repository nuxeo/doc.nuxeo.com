#!/usr/bin/env node
'use strict';
/* eslint no-console: 0 */

const yaml = require('js-yaml');
const fs = require('fs');
const path = require('path');

const shortlinks = require('../shortlinks');
const redirects_file = path.join(__dirname, '..', 'redirects.yml');

// Shortlinks
console.log(
  Object.keys(shortlinks)
    .map(shortlink_url => {
      const shortlink = shortlinks[shortlink_url];
      // Build output string
      return `rewrite ^/n/${shortlink}/?\t${shortlink_url}\tpermanent;`;
    })
    .join('\n')
);

// Redirects
const escape_spaces = text => text.replace(/ /g, '\\ ');
let redirects;

try {
  redirects = yaml.safeLoad(fs.readFileSync(redirects_file, 'utf8')) || {};
} catch (e) {
  redirects = {};
  throw new Error(`Failed to load: ${redirects_file}\n${e}`);
}

// Output to stdout
console.log(
  Object.keys(redirects)
    .map(source => {
      // default to `/`
      let target = redirects[source] || '/';
      // add leading /
      if (
        target[0] !== '/' &&
        !target.startsWith('http://') &&
        !target.startsWith('https://')
      ) {
        target = `/${target}`;
      }

      // Escape spaces in source and target
      source = escape_spaces(source);
      target = escape_spaces(target);

      // Build output string
      return `rewrite ${source}\t${target}\tpermanent;`;
    })
    .join('\n')
);
