  },
  "os": [
    "!win32"
  ],
  "engines": {
    "node": ">=6.5"
  },
  "dependencies": {
    "async": "^2.0.1",
    "bluebird": "^3.4.1",
    "bunyan": "^1.8.1",
    "cheerio": "^0.20.0",
    "co": "^4.6.0",
    "debug": "^2.2.0",
    "emojione": "^2.2.6",
    "escape-string-regexp": "^1.0.5",
    "handlebars": "^4.0.5",
    "joi": "^8.4.2",
    "jquery": "^2.2.4",
    "js-yaml": "^3.6.1",
    "lodash.clonedeep": "^4.5.0",
    "lodash.defaultsdeep": "^4.5.1",
    "lodash.get": "^4.4.1",
    "lodash.isempty": "^4.3.1",
    "lodash.set": "^4.3.1",
    "lodash.sortby": "^4.6.1",
    "lodash.throttle": "^4.1.1",
    "marked": "woodyrew/marked#list-starting-number",
    "metalsmith": "^2.2.0",
    "metalsmith-default-values": "0.0.2",
    "metalsmith-gzip": "^1.1.0",
    "metalsmith-if": "^0.1.1",
    "metalsmith-in-place": "^1.4.4",
    "metalsmith-layouts": "^1.6.5",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-matters": "^1.2.0",
    "metalsmith-permalinks": "^0.5.0",
    "metalsmith-sitemap": "^1.1.0",
    "moment": "^2.14.1",
    "multimatch": "^2.1.0",
    "multisort": "^0.5.3",
    "node-yaml-config": "0.0.4",
    "quotation": "^1.0.1",
    "recursive-readdir": "^2.1.0",
    "request": "^2.74.0",
    "sitemap": "^1.8.1",
    "slug": "^0.9.1",
    "tree-model": "^1.0.4"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.1",
    "babel-core": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-preset-react": "^6.11.1",
    "browser-sync": "^2.14.0",
    "eslint": "^2.10.2",
    "eslint-plugin-react": "^5.2.2",
    "font-awesome": "^4.6.1",
    "foundation-sites": "6.2.3",
    "highlight.js": "^9.4.0",
    "lodash.assign": "^4.2.0",
    "motion-ui": "^1.2.2",
    "node-sass": "^3.7.0",
    "nodemon": "^1.10.2",
    "postcss-cli": "^2.5.2",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-treebeard": "^1.1.3",
    "sass-lint": "^1.9.1",
    "script-loader": "^0.7.0",
    "tape": "^4.6.0",
    "taper": "^0.5.0",
    "webpack": "^1.13.1",
    "what-input": "^2.1.0"
  },
  "main": "lib/builder_module.js",
  "config": {
    "browser": "chromium-browser"
  },
  "scripts": {
    "prestart": "npm run empty_directories && npm run compile && npm run default_redirects",
    "start": "./build.sh",
    "poststart": "npm run copy_assets && npm run verify",
    "pretest": "npm run yaml_lint config.yml",
    "test": "taper test",
    "posttest": "npm run lint",
    "verify": "taper verify/site",
    "verify_assets": "taper verify/built_assets",
    "precompile": "npm run test",
    "compile": "npm run build_css && npm run build_css_postcss && npm run build_js && npm run copy_asset_stats",
    "postcompile": "npm run verify_assets",
    "prebuild_js": "rm -rf ./assets/js/*",
    "build_js": "webpack --json > webpack.stats.json",
    "copy_asset_stats": "./bin/trim-webpack-stats webpack.stats.json > ./lib/webpack.stats.json && cp css.md5 ./lib",
    "prebuild_css": "ls ./assets/fonts > /dev/null || mkdir -p ./assets/fonts && rm -rf ./client/css/* ./assets/css/* && npm run copy_fontawesome && cp -r ./assets/fonts ./assets/css/",
    "build_css": "node-sass --source-map true --source-map-contents --include-path ./client/scss/ --include-path ./node_modules/foundation-sites/scss/ --include-path ./node_modules/motion-ui/src --include-path ./node_modules/font-awesome/scss --output-style compressed --output ./client/css/ ./client/scss/",
    "postbuild_css": "openssl md5 client/css/* | awk '{print $2}' | sort | openssl md5 | grep -oE '[a-zA-Z0-9]+$' > css.md5",
    "copy_fontawesome": "find ./node_modules/font-awesome/fonts/* -maxdepth 0 -type f -exec cp -f \"{}\" ./assets/fonts/ \\;",
    "build_css_postcss": "postcss --use autoprefixer -c postcss.json -d assets/css/`cat css.md5` client/css/*.css",
    "lint": "eslint --cache --ignore-pattern node_modules --ignore-pattern site/ --ignore-pattern assets/ --ignore-pattern temp/ --ignore-pattern repositories/ --ext .js '**/*.js'",
    "yaml_lint": "js-yaml -t > /dev/null",
    "default_redirects": "cp ./redirects_default.yml ./redirects.yml",
    "empty_directories": "npm run empty_site && npm run empty_temp && npm run empty_logs",
    "empty_site": "rm -rf ./site/*",
    "empty_temp": "rm -rf ./temp/*",
    "empty_logs": "rm -rf ./logs/*",
    "copy_assets": "rsync -a ./assets/ ./site/assets/ && npm run duplicate_asset_stats",
    "server": "browser-sync start --server site --browser=$npm_package_config_browser",
    "server_reload": "browser-sync reload",
    "browser_sync": "echo 'This has been replaced by server. npm run server';",
    "browser_sync_reload": "echo 'This has been replaced by server_reload. npm run server_reload';",
    "dev": "NODE_ENV=development nodemon --exec 'npm run compile'",
    "dev_server": "npm run browser_sync & NODE_ENV=development nodemon --exec 'npm start && browser-sync reload'",
    "dev_assets": "npm run browser_sync & NODE_ENV=development nodemon --exec 'npm run update_assets && browser-sync reload'",
    "duplicate_asset_stats": "test -e temp/metadata.json && npm run duplicate_css_stats && npm run duplicate_js_stats",
    "duplicate_css_stats": "test -e temp/css.md5 || cp lib/css.md5 temp",
    "duplicate_js_stats": "test -e temp/webpack.stats.json || cp lib/webpack.stats.json temp",
    "add_css_to_existing_build": "cp -r assets/css/`cat css.md5`/* site/assets/css/`cat temp/css.md5`",
    "add_js_to_existing_build": "./bin/add_js_to_existing_build lib/webpack.stats.json temp/webpack.stats.json",
    "update_assets": "npm run compile && npm run add_css_to_existing_build && npm run add_js_to_existing_build && browser-sync reload"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:nuxeo/doc.nuxeo.com.git"
  },
  "bugs": {
    "url": "git@github.com:nuxeo/doc.nuxeo.com.git/issues"
  },
  "homepage": "http://doc.nuxeo.com"
}
