{{#if menu_data}}
<div>
    <div class="input-container">
        <div class="input-group">
            <input type="text"
                placeholder="FILTER MENU&hellip;"
                class="input-group-field menu-filter"
            />
        </div>
    </div>
    <ul>
    {{#each menu_data}}
    {{#if id}}
        <li id="menu_item_{{@index}}" data-menu-id="{{id}}" data-menu-level="{{level}}" data-menu-parent="{{#each parents}}{{#if @last}}{{this}}{{/if}}{{/each}}" data-init-open="{{#if open}}open{{/if}}" data-init-show="{{#if show}}show{{/if}}" class="{{classes}}" {{#unless show}}style="display: none;"{{/unless}}>
            {{#if has_control}}
            <i class="fa fa-fw fa-caret-right" aria-hidden="true"></i>
            {{/if}}
            <a href="{{url_full}}">{{name}}</a>
        </li>
    {{/if}}
    {{/each}}
    </ul>
</div>
{{/if}}
