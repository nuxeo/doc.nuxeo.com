{{#if menu}}
<div>
    <div class="input-container">
        <div class="input-group">
            <input type="text"
                placeholder="FILTER MENU&hellip;"
                class="input-group-field menu-filter"
            />
        </div>
    </div>
    <ul data-magellan data-deep-linking="true">
    {{#each menu}}
    {{#if is_toc}}
        <li class="{{classes}}" {{#unless show}}style="display: none;"{{/unless}}>
            {{#if (condition id '||' title)}}
            <a href="#{{id}}">{{title}}</a>
            {{/if}}
        </li>
    {{else}}
        <li class="id-{{id}} {{classes}}" {{#unless show}}style="display: none;"{{/unless}}>
            {{#if has_control}}
            <i class="fa fa-fw fa-caret-right" aria-hidden="true"></i>
            {{/if}}
            <a href="{{url_full}}">{{name}}</a>
        </li>
    {{/if}}
    {{/each}}
    </ul>
</div>
{{/if}}
