{{> header_standard}}
<div id="content_container" class="column {{#if no_side_menu}}small-centered{{else if is_overview}}small-12 medium-8 large-9 overview{{else}}medium-8 large-6{{/if}}">
  <div class="{{#unless no_side_menu}}content-gutter max-900{{/unless}}">
    {{> breadcrumb}}
    <div class="heading-group">
      <div id="section_name" class="hide">{{hierarchy.section_name}}</div>
      <h1 id="page-title">{{title}}</h1>
      <div>
        Updated: {{moment history.[0].date format='LL'}}
        {{#if history_url}}<a title="GitHub History" href="{{history_url}}" target="_blank" rel="noopener">
          <i class="fa fa-history"></i>
        </a>{{/if}}
        {{#if edit_url}}<a title="Edit on GitHub" href="{{edit_url}}" target="_blank" rel="noopener">
          <i class="fa fa-edit"></i>
        </a>{{/if}}
        {{#if url.shortlink}}<a class="get_permalink" title="Copy Permalink" href="/n/{{url.shortlink}}">
          <i class="fa fa-link"></i>
        </a>{{/if}}
        {{> versions}}
      </div>
    </div>
    <div id="content" class="{{#if toc}} toc{{#if toc_no_h4}} toc-no-h4{{/if}}{{/if}}{{#if tabbed_page}} tabbed{{/if}} end">
      {{{contents}}}

      {{#if (condition previous_link '||' next_link)}}
      <div class="row expanded collapse">
        <div class="column medium-6">
          {{#if previous_link}}
          <a href="{{page page=previous_link}}" class="sequence-link previous-link">
            <i class="fa fa-long-arrow-left" aria-hidden="true"></i> {{page_title previous_link}}
          </a>
          {{/if}}
        </div>
        <div class="column medium-6 text-right">
          {{#if next_link}}
          <a href="{{page page=next_link}}" class="sequence-link next-link">
            {{page_title next_link}} <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
          </a>
          {{/if}}
        </div>
      </div>
      {{/if}}
    </div>
  </div>
</div>

<div {{#if toc}}id="toc"{{/if}} class="column large-3 show-for-large" data-sticky-container>
  {{#if toc}}
  <nav class="sticky" data-sticky data-anchor="content_container" data-sticky-on="large" data-margin-top="7.3" style="margin-top: 7.3em;">
    <div class="toc__heading">On this page</div>
    <ul id="toc_list" class="vertical menu" data-magellan data-offset="70">
      {{#each menu_data}}
      {{#if toc_items}}
      {{#each toc_items}}
      <li id="toc_item_{{@index}}" class="{{classes}}" {{#unless show}}style="display: none;"{{/unless}}>
        {{#if (condition id '||' title)}}
        <a href="#{{id}}">{{title}}</a>
        {{/if}}
      </li>
      {{/each}}
      {{/if}}
      {{/each}}
    </ul>
  </nav>
  {{/if}}
</div>

{{> footer_standard}}
