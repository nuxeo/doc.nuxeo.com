root: true

env:
    node: true

extends:
    - "eslint:recommended"
    - ".eslintdefaults"

rules:
    brace-style: [2, "stroustrup", { allowSingleLine: true }]
    callback-return: [2, ["cb", "callback", "next"]]
    camelcase: 0
    comma-spacing: [2, {"before": false, "after": true}]
    comma-style: [2, "last"]
    func-style: [2, "expression"]
    key-spacing: [2, {align: "colon", beforeColon: false, afterColon: true}]
    no-console: 1
    no-multi-spaces: [1, {exceptions: {VariableDeclarator: true}}]
    no-underscore-dangle: 0
    quotes: [2, "single", "avoid-escape"]
    space-before-function-paren: [2, "always"]
    valid-jsdoc: [1, {requireParamDescription: false, requireReturnDescription: false}]
